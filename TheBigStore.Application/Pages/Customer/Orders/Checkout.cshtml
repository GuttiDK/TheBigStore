                                    <div>
                                        <h6 class="my-0">@item.ItemName</h6>
                                        <small class="text-muted">@item.Description</small>
                                    </div>
                                    <span class="text-muted">
                                        @((item.Price * item.Quantity).ToString("C"))
                                    </span>
                                    <span class="text-muted">
                                        @item.Quantity
                                    </span>
                                    <div class="btn-group">
